    <div class="d-flex flex-column align-items-center">
        <h1 class="mt-1">New Campground</h1>
        <div>
            <div class="py-3">
                <form action="/campgrounds" method="POST" class="validated-form" novalidate>
                    <div class="d-flex flex-column mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="campground[title]" class="form-control " required
                            placeholder="Title">
                        <div class="invalid-feedback">
                            Please enter a title.
                        </div>
                    </div>
                    <div class="d-flex flex-column mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" name="campground[location]" class="form-control " required
                            placeholder="Location">
                        <!-- <div class="valid-feedback">
                            Looks good!
                        </div> -->
                        <div class="invalid-feedback">
                            Please enter location.
                        </div>
                    </div>
                    <div class="d-flex flex-column mb-2">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" id="image" name="campground[image]" class="form-control " required
                            placeholder="Enter Image Link">
                        <div class="invalid-feedback">
                            Please enter image link.
                        </div>
                    </div>
                    <div class="d-flex flex-column mb-2">
                        <label for="price" class="form-label">Price</label>
                        <div class="d-flex flex-row">
                            <span class="input-group-text mx-2" id="price-label">$</span>
                            <input type="text" id="price" name="campground[price]" class="form-control " required
                                placeholder="Price (in $)">
                        </div>
                        <div class="invalid-feedback">
                            Please enter a price.
                        </div>
                    </div>
                    <div class="d-flex flex-column mb-2">
                        <label for="description" class="form-label">Description</label>
                        <input type="text-box" id="description" name="campground[description]"
                            class="form-control form-control-lg " required>
                        <div class="invalid-feedback">
                            Please choose a description.
                        </div>
                    </div>
                    <button class="btn btn-success">Add Campground</button>

                </form>
            </div>
        </div>
        <a href="/campgrounds">All Campgrounds</a>
    </div>