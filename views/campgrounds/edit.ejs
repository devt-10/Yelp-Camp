            <form action="/campgrounds" method="POST" class="validated-form" novalidate>
                <div class="d-flex flex-column mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="campground[title]" class="form-control" placeholder="Title"
                        value="<%= campground.title %>" required>
                </div>
                <div class="d-flex flex-column mb-2">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="campground[location]" class="form-control"
                        placeholder="Location" value="<%= campground.location %>" required>
                </div>
                <div class=" d-flex flex-column mb-2">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" id="image" name="campground[image]" class="form-control"
                        placeholder="Enter Image Link" value="<%= campground.image %>" required>
                </div>
                <div class=" d-flex flex-column mb-2">
                    <label for="price" class="form-label">Price</label>
                    <div class="d-flex flex-row">
                        <span class="input-group-text mx-2" id="price-label">$</span>
                        <input type="text" id="price" name="campground[price]" class="form-control"
                            placeholder="Price (in $)" value="<%= campground.price %>" required>
                    </div>
                </div>
                <div class=" d-flex flex-column mb-2">
                    <label for="description" class="form-label">Description</label>
                    <input type="text-box" id="description" name="campground[description]"
                        class="form-control form-control-lg" value="<%= campground.description %>" required>
                </div>
                <button class=" btn btn-success">Add Campground</button>

            </form>
        </span>
    </div>